// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                 String    @id @default(cuid())
  name               String
  email              String    @unique
  password           String
  role               String    @default("User")
  shopName           String?
  shopAddress        String?
  shopNumber         String?
  shopDescription    String?   // Added for vendor details
  mobileNumber       String?
  salesHandlerMobile String?
  gstNumber          String?
  status             String    @default("active")
  avatar             String?
  onboardedAt        DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  products Product[]
  orders   Order[]   @relation("CustomerOrders")
  reviews  Review[]
}

model Product {
  id                String   @id @default(cuid())
  name              String
  category          String
  description       String
  pricePerDay       Float
  retailPrice       Float?   // Added for discount calculation
  securityDeposit   Float
  stockQuantity     Int
  availableQuantity Int
  sizes             Json     // e.g. ["S", "M", "L"]
  images            Json     // e.g. ["url1", "url2"]
  subAdminId        String
  vendor            User     @relation(fields: [subAdminId], references: [id], onDelete: Cascade)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  reviews           Review[]

  @@index([subAdminId])
  @@index([category])
  @@index([pricePerDay])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      @default(5)
  comment   String
  productId String
  userId    String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([productId])
  @@index([userId])
}

model Order {
  id              String   @id @default(cuid())
  customerId      String
  customer        User     @relation("CustomerOrders", fields: [customerId], references: [id], onDelete: Cascade)
  vendorId        String
  shopName        String
  customerName    String
  items           Json     // JSON array of order items
  totalAmount     Float
  status          String   @default("Active")
  rentalStartDate String
  rentalEndDate   String
  paymentMethod   String?
  feedback        Json?    // JSON object
  issues          Json?    // JSON array
  orderDate       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([customerId])
  @@index([vendorId])
  @@index([status])
}

model Subscriber {
  id           String   @id @default(cuid())
  email        String   @unique
  subscribedAt DateTime @default(now())
}

model SystemSetting {
  id    String @id @default(cuid())
  key   String @unique
  value String
}
